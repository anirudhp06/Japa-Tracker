<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    android:padding="16dp">

    <include
        android:id="@+id/mantra_layout"
        layout="@layout/mantra_layout"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/login_fab"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:contentDescription="@string/used_to_perform_login"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal" />

        <ImageButton
            android:id="@+id/resetValues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_delete" />
    </LinearLayout>
</LinearLayout>